    // Location Search
    private async Task<IEnumerable<string>> LocationSearch(string searchText)
    {
        // In real life, use an asynchronous function for fetching data from an API.
        LocationList = await _dbLocation.GetLocationData();

        if (string.IsNullOrEmpty(searchText))
        {
            // If searchText is null or empty, return the complete list of location names
            return LocationList.Select(location => location.LocationName);
        }
        else
        {
            // Perform a case-insensitive search for location names containing the searchText
            var filteredLocations = LocationList
                .Where(location => location.LocationName.IndexOf(searchText, StringComparison.OrdinalIgnoreCase) >= 0)
                .Select(location => location.LocationName);

            return filteredLocations;
        }
    }
