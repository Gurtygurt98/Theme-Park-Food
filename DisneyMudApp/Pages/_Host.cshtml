@page "/"
@namespace DisneyMudApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<component type="typeof(App)" render-mode="ServerPrerendered" />
@*JavaScript function to create a pdf of the text parameter that is passed and save it as the name pararmeter.pdf*@
<script>

    function createPdfFromText(text,name) {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();

        const lines = text.split("\n");
        let y = 10;
        lines.forEach(line => {
            doc.text(line, 10, y);
            y += 10; 
        });

        doc.save(name+"_Menu.pdf");
    }

</script>